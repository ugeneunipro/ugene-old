#@UGENE_WORKFLOW
#Create alignment with Kalign algorithm. Kalign is a fast and accurate multiple sequence alignment algorithm designed to align large numbers of protein sequences.
#

workflow align-kalign{
    read-msa {
        type:read-msa;
        name:"Read alignment";
    }
    kalign {
        type:kalign;
        name:"Align with Kalign";
        bonus-score:0.02;
        gap-ext-penalty:8.52;
        gap-open-penalty:54.9;
        terminal-gap-penalty:4.42;
    }
    write-msa {
        type:write-msa;
        name:"Write alignment";
        document-format:clustal;
        write-mode:1;
    }

    read-msa.msa->kalign.in-msa.msa
    kalign.msa->write-msa.in-msa.msa

    .meta {
        aliases {
            read-msa.url-in:in;
            kalign.bonus-score:bonus-score;
            kalign.gap-ext-penalty:gap-ext-penalty;
            kalign.gap-open-penalty:gap-open-penalty;
            kalign.terminal-gap-penalty:gap-terminal-penalty;
            write-msa.document-format:format;
            write-msa.url-out:out;
        }
        help {
            in:"Input alignment";
            out:"Output alignment";
        }
        visual {
            read-msa {
                pos:"-750 -615";
                style:ext;
                bg-color-ext:"0 128 128 64";
                out-msa.angle:360;
            }
            kalign {
                pos:"-540 -615";
                style:ext;
                bg-color-ext:"0 128 128 64";
                in-msa.angle:180;
                out-msa.angle:360;
            }
            write-msa {
                pos:"-300 -615";
                style:ext;
                bg-color-ext:"0 128 128 64";
                in-msa.angle:180;
            }
            read-msa.out-msa->kalign.in-msa {
                text-pos:"-45 -50";
            }
            kalign.out-msa->write-msa.in-msa {
                text-pos:"-45 -24";
            }
        }
    }
}
