                out-file.angle:360;
            }
            CASAVAFilter.out-file->CutAdaptFastq.in-file {
                text-pos:"-40.75 -30";
            }
            CutAdaptFastq.out-file->QualityTrim.in-file {
                text-pos:"-42.75 -29";
            }
            QualityTrim.out-file->bwamem-id.in-data {
                text-pos:"-38.75 -28";
