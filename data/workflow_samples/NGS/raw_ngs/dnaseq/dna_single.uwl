            files-conversion {
                pos:"45 -540";
                style:simple;
                bg-color-simple:"84 84 84 255";
                in-file.angle:90;
                out-file.angle:181.591;
            }
            filter-bam {
                pos:"-570 -555";
                style:ext;
                bg-color-ext:"194 0 0 64";
                bounds:"-30 -30 142.875 61";
                in-file.angle:354.364;
                out-file.angle:297.235;
            }
            get-file-list {
                pos:"-1080 -795";
                style:ext;
